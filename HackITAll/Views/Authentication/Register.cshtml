@model HackITAll.Models.Users

@{
    ViewBag.Title = "Register";
}

<div id="myHidden">
    <h2 class="text-center style1">Register</h2>
    <br />
    <p class="text-center style1">(Dupa inregistrare va trebui sa asteptati admin-ul sa va valideze accountul pentru a putea incarca produse !)</p>
    <div class="col-sm-12">
        @using (Html.BeginForm("Register", "Authentication", FormMethod.Post))
        {
            <div class="row">
                <div class="center">
                    @Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = "Username*", autocomplete = "off" } })
                </div>
            </div>
            <div class="row">
                <div class="center">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control text-box single-line", placeholder = "Password*", autocomplete = "off" })
                </div>
            </div>
          
            <div class="row">
                <div class="center">
                    @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control text-box single-line", placeholder = "E-mail*", autocomplete = "off" } })
                </div>
            </div>

            <div class="row">
                <div class="center">
                    @Html.EditorFor(x => x.Latitude, new { htmlAttributes = new { @class = "form-control text-box single-line", @readonly = "readonly", placeholder = "Latitude*", autocomplete = "off" } })
                </div>
            </div>

            <div class="row">
                <div class="center">
                    @Html.EditorFor(x => x.Longitude, new { htmlAttributes = new { @class = "form-control text-box single-line", @readonly = "readonly", placeholder = "Longitude*", autocomplete = "off" } })
                </div>
            </div>

            <br />
            <h3>Va rugam bifati pe harta locul unde va putem gasi</h3>

            <div id="googleMap"></div>

    <br />

            <div class="row">
                <div class="col-sm-11 form-group">
                    <div class="centerbutton">
                        <input class="btn" type="submit" value="Register" /><br />
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAyZ6CO_c40KYO0TF7M_7L3GSpW98Tf_qw&sensor=false" type="text/javascript"></script>


